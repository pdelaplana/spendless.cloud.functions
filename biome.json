{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"style": {
				"useConst": "error"
			}
		}
	},
	"formatter": {
		"useEditorconfig": true,
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"semicolons": "always"
		}
	},
	"files": {
		"include": [
			"functions/src/**/*.{ts,js,tsx,jsx}"
		],
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/.github/**"
		]
	}
}